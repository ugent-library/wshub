{{define "head"}}
<title>Chat - Room {{.Room}}</title>
{{end}}

{{define "main"}}
<div class="container" hx-ext="ws" ws-connect="/room/{{.Room}}/user/{{.User}}/ws">
    <div class="mb-2 float-end"
        hx-get="/room/{{.Room}}/presence"
        hx-trigger="every 1s"
        hx-target="this"
        hx-swap="innerHTML"
    >
        <div id="users"><span class="badge rounded-pill text-bg-info">{{.User}}</span></div>
    </div>

    <form class="mb-2" hx-post="/room/{{.Room}}" hx-swap="none">
        <div class="input-group mb-3">
            <input type="hidden" name="user" value="{{.User}}">
            <input type="text" name="msg" class="form-control" placeholder="Type your message here" value="">
            <button class="btn btn-outline-primary" type="submit">Send</button>
        </div>
    </form>

    <ul id="messages" class="list-unstyled"></ul>
</div>
{{end}}
